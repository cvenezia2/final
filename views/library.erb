<div class="row">
  <div class="col-sm-9"> 
    <h1><%= @library[:name] %></h1>
    <p><%= @library[:description] %></p>
    <% for review in @reviews %>
            <% user = @users_table.where(:id => review[:user_id]).to_a[0] %>
            <div class="media">
                <% if review[:review] %>
                    <i class="far fa-smile fa-3x"> </i>
                <% else %>
                   <i class="far fa-angry fa-3x"> </i>
                <% end %>
                <div class="media-body">
                    <h5 class="mt-0"><%= user[:name] %></h5>
                    <p> Book Title: <%= review[:booktitle] %> </p>
                    <p> Comments: <%= review[:comments] %> </p>
                </div>
            </div>
        <% end %>
            <p class="mt-5"><a href="/libraries/<%= @library[:id] %>/reviews/new" class="btn btn-primary">Submit Your Review</a></p>
  </div>
  <div class="col-sm-3">
    <h3>Where?</h3>
    <p><%= @library[:location] %></p>
    <h3>Number of books reviewed</h3>
    <p><%= @count %></p>
  </div>
</div>