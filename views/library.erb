<div class="row">
  <div class="col-sm-9"> 
    <h1><%= @library[:name] %></h1>
    <p><%= @library[:description] %></p>
    <h3 class="mt-5">Reviews</h3>
    <% for review in @reviews %>
        <div class="media mt-3">
            <% if review[:review] %>
            <i class="far fa-smile fa-3x"></i>
            <% else %>
            <i class="far fa-angry fa-3x"></i>
            <% end %>
            <div class="media-body ml-3">
            <h5 class="mt-0"><%= review[:name] %></h5>
            Book Title: <%= review[:booktitle] %>
            <p> <%= review[:comments] %> </p>
            </div>
        </div>
        <% end %>
    <p class="mt-5"><a href="/libraries/<%= @library[:id] %>/reviews/new" class="btn btn-primary">Submit Your Review</a></p>
  </div>
  <div class="col-sm-3">
    <h3>Where?</h3>
    <p><%= @library[:location] %></p>
    <h3>Number of books reviewed</h3>
    <p><%= @count %></p>
  </div>
</div>