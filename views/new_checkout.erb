<h1>Confirm Your Information for <%= @library[:name] %></h1>

<h3>Checkout?</h3>

<form action="/libraries/<%= @library[:id] %>/checkouts/create" class="mt-5">
  <div class="form-group">
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="going" value="1">
      <label class="form-check-label">Yes</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="going" value="0">
      <label class="form-check-label">No, take me back to return a book</label>
    </div>
  </div>
  <div class="form-group">
    <label>Your Name</label>
    <input type="text" class="form-control" name="name">
  </div>
  <div class="form-group">
    <label>Your Email</label>
    <input type="text" class="form-control" name="email">
  </div>
  <div class="form-group">
    <label>Comments</label>
    <textarea class="form-control" name="comments"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Send Me My Book!</button>
</form>